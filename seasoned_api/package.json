        "jsonwebtoken": "^8.0.1",
        "mongoose": "^3.6.13",
        "moviedb": "^0.2.10",
        "node-cache": "^4.1.1",
        "nodemailer": "^4.0.1",
        "python-shell": "^0.4.0",
        "raven": "^2.2.1",
        "request": "^2.81.0",
        "request-promise": "^4.2",
        "sqlite": "^2.9.0"
    },
    "devDependencies": {
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint": "^4.9.0",
        "istanbul": "^0.4.5",
        "mocha": "^3.1.0",
        "supertest": "^2.0.1",
        "supertest-as-promised": "^4.0.1"

    }
