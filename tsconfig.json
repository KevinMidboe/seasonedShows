{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "outDir": "lib"
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
